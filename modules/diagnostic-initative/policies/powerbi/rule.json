{
    "if": {
        "allOf": [
            {
                "equals": "[parameters('resourceLocation')]",
                "field": "location"
            },
            {
                "equals": "Microsoft.PowerBIDedicated/capacities",
                "field": "type"
            }
        ]
    },
    "then": {
        "details": {
            "deployment": {
                "properties": {
                    "mode": "incremental",
                    "parameters": {
                        "eventHubAuthorizationRuleId": {
                            "value": "[parameters('eventHubAuthorizationRuleId')]"
                        },
                        "eventHubName": {
                            "value": "[parameters('eventHubName')]"
                        },
                        "id": {
                            "value": "[field('fullName')]"
                        },
                        "name": {
                            "value": "[field('name')]"
                        },
                        "retentionDays": {
                            "value": "[parameters('requiredRetentionDays')]"
                        },
                        "storageAccountName": {
                            "value": "[parameters('storageAccountName')]"
                        },
                        "workspaceId": {
                            "value": "[parameters('workspaceId')]"
                        }
                    },
                    "template": {
                        "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                        "contentVersion": "1.0.0.0",
                        "parameters": {
                            "eventHubAuthorizationRuleId": {
                                "type": "string"
                            },
                            "eventHubName": {
                                "type": "string"
                            },
                            "id": {
                                "type": "string"
                            },
                            "name": {
                                "type": "string"
                            },
                            "retentionDays": {
                                "type": "string"
                            },
                            "storageAccountName": {
                                "type": "string"
                            },
                            "workspaceId": {
                                "type": "string"
                            }
                        },
                        "resources": [
                            {
                                "apiVersion": "2017-05-01-preview",
                                "dependsOn": [],
                                "name": "[concat(parameters('name'), '/', 'Microsoft.Insights/setByPolicy')]",
                                "properties": {
                                    "eventHubAuthorizationRuleId": "[if(variables('ehEnabled'),parameters('eventHubAuthorizationRuleId'),json('null'))]",
                                    "eventHubName": "[if(variables('ehEnabled'),parameters('eventHubName'),json('null'))]",
                                    "logs": [
                                        {
                                            "category": "Engine",
                                            "enabled": true,
                                            "retentionPolicy": {
                                                "days": "[parameters('retentionDays')]",
                                                "enabled": true
                                            }
                                        }
                                    ],
                                    "metrics": [
                                        {
                                            "category": "AllMetrics",
                                            "enabled": true,
                                            "retentionPolicy": {
                                                "days": "[parameters('retentionDays')]",
                                                "enabled": true
                                            }
                                        }
                                    ],
                                    "storageAccountId": "[if(variables('saEnabled'),resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')),json('null'))]",
                                    "workspaceId": "[if(variables('laEnabled'),parameters('workspaceId'),json('null'))]"
                                },
                                "type": "Microsoft.PowerBIDedicated/capacities/providers/diagnosticSettings"
                            }
                        ],
                        "variables": {
                            "ehEnabled": "[greater(length(parameters('eventHubName')),0)]",
                            "laEnabled": "[greater(length(parameters('workspaceId')),0)]",
                            "saEnabled": "[greater(length(parameters('storageAccountName')),0)]"
                        }
                    }
                }
            },
            "existenceCondition": {
                "anyOf": [
                    {
                        "allOf": [
                            {
                                "equals": "true",
                                "field": "Microsoft.Insights/diagnosticSettings/logs[*].retentionPolicy.enabled"
                            },
                            {
                                "equals": "[parameters('requiredRetentionDays')]",
                                "field": "Microsoft.Insights/diagnosticSettings/logs[*].retentionPolicy.days"
                            },
                            {
                                "equals": "true",
                                "field": "Microsoft.Insights/diagnosticSettings/logs.enabled"
                            }
                        ]
                    },
                    {
                        "allOf": [
                            {
                                "not": {
                                    "equals": "true",
                                    "field": "Microsoft.Insights/diagnosticSettings/logs[*].retentionPolicy.enabled"
                                }
                            },
                            {
                                "equals": "true",
                                "field": "Microsoft.Insights/diagnosticSettings/logs.enabled"
                            }
                        ]
                    }
                ]
            },
            "roleDefinitionIds": [
                "/providers/Microsoft.Authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
            ],
            "type": "Microsoft.Insights/diagnosticSettings"
        },
        "effect": "DeployIfNotExists"
    }
}